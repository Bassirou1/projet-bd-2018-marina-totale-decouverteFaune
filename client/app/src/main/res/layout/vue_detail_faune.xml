<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vue.VueDetailFaune">

    <fragment
        android:id="@+id/carte_terrains"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="253dp" />

    <TextView
        android:id="@+id/vue_detail_faune_espece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:text="Espece"
        android:textSize="36sp" />

    <Button
        android:id="@+id/action_commentaires"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="320dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="200dp"
        android:text="Commentaires" />

    <Button
        android:id="@+id/action_ajouter_commentaire"
        android:layout_width="153dp"
        android:layout_height="61dp"
        android:layout_alignTop="@+id/action_commentaires"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="320dp"
        android:layout_marginRight="200dp"
        android:layout_marginBottom="200dp"
        android:text="J'ai vu" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-12dp"
        android:layout_marginTop="370dp"
        android:layout_toEndOf="@+id/action_commentaires"
        android:text="Information : " />

    <TextView
        android:id="@+id/text_information_etreVivant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="400dp"
        android:text="TextView" />

    <android.support.design.widget.NavigationView
        android:id="@+id/menu_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_swipe">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>